<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--自定义属性-->
    <declare-styleable name="PictureIndicatorView">
        <!--用作滑块的图片资源-->
        <attr name="indicator" format="reference"/>
        <!--初始状况下滑块距离屏幕左边的距离-->
        <attr name="initTranslation" format="dimension"/>
        <!--可见滑块数量-->
        <attr name="visibleCount" format="integer"/>
        <!--文字被选中的颜色-->
        <attr name="titleseletedcolor" format="color"/>
        <!--标题默认颜色-->
        <attr name="titlenormalcolor" format="color"/>
        <!--滑块距离文字的距离-->
        <attr name="topdistance" format="dimension"/>
        <!--字体大小-->
        <attr name="titletextsize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="CircleIndicator">
        <attr name="gap" format="dimension"/>
        <attr name="selectedColor" format="color"/>
        <attr name="normalColor" format="color"/>
    </declare-styleable>
</resources>

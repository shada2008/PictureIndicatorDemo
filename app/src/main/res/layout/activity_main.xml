<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.android.pictureindicator.MainActivity">
    <com.demo.android.pictureindicator.PictureIndicatorView
        android:id="@+id/pictureindicator"
        android:layout_width="match_parent"
        app:indicator="@drawable/tab_current"
        android:layout_height="45dp"
        app:initTranslation="10dp"
        app:titlenormalcolor="#000"
        app:titleseletedcolor="#0f0"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>

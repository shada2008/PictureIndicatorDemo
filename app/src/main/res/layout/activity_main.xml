<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.android.pictureindicator.MainActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.demo.android.pictureindicator.PictureIndicatorView
        android:id="@+id/pictureindicator"
        android:layout_width="match_parent"
        app:indicator="@drawable/tab_current"
        android:layout_height="45dp"
        app:initTranslation="10dp"
        app:titlenormalcolor="#000"
        app:titleseletedcolor="#0f0" />
    <com.demo.android.pictureindicator.CircleIndicator
        android:id="@+id/circleindicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        app:gap="10dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
